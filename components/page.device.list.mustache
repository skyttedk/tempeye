{{#devices}}

<div id="{{id}}" class="accordion" >
  <div class="accordion-item">
    <h2 class="accordion-header" id="heading{{id}}">
      <button
        class="accordion-button collapsed"
        type="button"
        data-mdb-toggle="collapse"
        data-mdb-target="#collapse{{id}}"
        aria-expanded="false"
        aria-controls="collapse{{id}}">
      {{id}}
      </button>
    </h2>
    <div id="collapse{{id}}" class="accordion-collapse collapse show" aria-labelledby="heading{{id}}" data-mdb-parent="#accordionExample">
      <div class="accordion-body">
        <strong>{{description}}</strong>



        <div class="d-flex align-items-start bg-darkj mb-3" style="height: 100px;">
          <div class="col-4">
              <div component="gauge" label="Temperature"></div>
          </div>
          <div class="col-4">
            <div component="gauge" label="humidity"></div>
          </div>
        </div>


        <br><br>
        
        
        
        <div class="row">
          <div class="col-6">
          <div style="font-size:small" class="text-muted">Sidst opdateret: 23:55</div>
            
          </div>
          <div class="col-6">
          <div style="font-size:small" class="text-muted">(02/05/2022)</div>
          <br>
          <div component="button.link" label="Indstillinger" deviceId={{id}} onclick="loadPage('page.device.settings');"></div>
          </div>
        </div>
      </div> 
    </div>
  </div>

{{/devices}} 

</div>